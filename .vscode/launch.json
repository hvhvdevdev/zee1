    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'posix'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=platform_posix",
                    "--package=platform_posix"
                ],
                "filter": {
                    "name": "platform_posix",
                    "kind": "bin",
                }
            },
            "args": ["-w","1280","-h","720","--mod","mods/zeroheat"],
            "cwd": "${workspaceFolder}"
        },
    ]
}